<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_style">
        <item name="android:font"> @font/roboto</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="page_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#80FFFFFF</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="page_button">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="cornerRadius">8dp</item>

    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@color/onBackGround</item>
        <item name="actionMenuTextColor">@color/onBackGround</item>
        <item name="popupMenuBackground">@drawable/overflow_menu_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="popupBackground" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/black</item>
        <item name="popupMenuBackground">@drawable/overflow_menu_bg</item>
        <item name="android:popupBackground">@drawable/overflow_menu_bg</item>

        <item name="dialogCornerRadius">10dp</item>
    </style>

    <style name="CustomDatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/datepicker</item>
        <item name="backgroundColor">@color/datepicker</item>
        <item name="dialogCornerRadius">10dp</item>
    </style>

    <style name="CustomTimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/datepicker</item>
        <item name="backgroundColor">@color/datepicker</item>
        <item name="dialogCornerRadius">10dp</item>
    </style>




</resources>
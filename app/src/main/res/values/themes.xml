<resources xmlns:tools="http://schemas.android.com/tools">
    // LIGHT MODE
    <style name="Base.Theme.WordPressClient" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>                 // button and stuff
        <item name="colorPrimaryVariant">@color/light_blue</item>    // just darker var
        <item name="colorOnPrimary">@color/black</item>              // text, stuff on primary
        <item name="colorSecondary">@color/gray</item>               // accent and highlight
        <item name="colorOnSecondary">@color/black</item>            // text on 2nd
        <item name="colorSurface">@color/white</item>                // ex. card bgs, dialogs
        <item name="colorOnSurface">@color/black</item>              // text  on surface
        <item name="android:windowBackground">@color/white</item>    // window bG

    </style>

    // No action bar and title
    <style name="Theme.WordPress.NoActionBar" parent="Base.Theme.WordPressClient">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    // App Bar light mode
    <style name="Theme.WordPress.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    // Light popups
    <style name="Theme.WordPress.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    // Main Theme for WordPressClient
    <style name="Theme.WordPressClient" parent="Base.Theme.WordPressClient" />


</resources>

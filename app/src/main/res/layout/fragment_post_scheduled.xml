<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.posts.PostScheduledFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/post_scheduled_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/no_post_screen_scheduled"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="173dp"
            android:layout_height="164dp"
            android:src="@drawable/empty_nothing"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.335" />

        <TextView
            android:id="@+id/textView1"

            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="@string/you_don_t_have_any_scheduled_post"
            android:textColor="@color/onBackGround"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/scheduled_post_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.5" />

        <Button
            android:id="@+id/scheduled_post_button"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:backgroundTint="@color/blue"
            android:text="@string/create_a_post"
            android:textColor="@color/onButton"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.561" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
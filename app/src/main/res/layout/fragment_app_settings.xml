<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"> <!-- Ensures content fills the viewport -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/main_background"
        android:padding="16dp">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_activity_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#121212"
            android:paddingTop="25dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <!-- Interface Language -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interface Language"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/interface_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@your_language"
            android:background="@android:color/white"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Appearance -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appearance"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/appearance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="System Default"
            android:background="@android:color/white"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Privacy settings -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy settings"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <!-- Open device settings -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open device settings"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <!-- Media section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Media"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <!-- Optimize Images Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Optimize Images"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:padding="10dp"/>

            <Switch
                android:id="@+id/switch_optimize_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Maximum Image Size -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maximum Image Size"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/maximum_image_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2000px"
            android:background="@android:color/white"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Image Quality -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image Quality"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/image_quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:background="@android:color/white"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Remove location from media -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Remove location from media"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:padding="10dp"/>

            <Switch
                android:id="@+id/switch_remove_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Optimize Videos Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Optimize Videos"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:padding="10dp"/>

            <Switch
                android:id="@+id/switch_optimize_videos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Maximum Video Size -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maximum Video Size"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/maximum_video_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="720p"
            android:background="@android:color/white"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Video Quality -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video Quality"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/video_quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="High"
            android:background="@android:color/white"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
</ScrollView>

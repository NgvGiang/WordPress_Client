<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Toolbar Section with Back Button -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_activity_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#121212"
        android:paddingTop="25dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Profile Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="16dp">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/ic_profile_placeholder"
            app:tint="#FFFFFF"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="15dp"
            android:background="@color/light_gray"
            android:src="@drawable/ic_profile_placeholder" />

        <!-- User Info -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- User Name -->
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="User Name"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <!-- User Account Name -->
            <TextView
                android:id="@+id/account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text=" @Account name"
                android:textColor="#9E9E9E"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Menu Items -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- My Profile -->
        <LinearLayout
            android:id="@+id/my_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:paddingVertical="16dp">

            <ImageView
                app:tint="#FFFFFF"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35dp"
                android:src="@drawable/ic_profile_placeholder" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="29dp"
                android:fontFamily="@font/roboto"
                android:text="My profile"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#444444" />

        <!-- Account Settings -->
        <LinearLayout
            android:id="@+id/account_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:paddingVertical="16dp">

            <ImageView
                app:tint="#FFFFFF"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35dp"
                android:src="@drawable/ic_account_settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="29dp"
                android:fontFamily="@font/roboto"
                android:text="Account Settings"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#444444" />

        <!-- App Settings -->
        <LinearLayout
            android:id="@+id/app_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:paddingVertical="16dp">

            <ImageView
                app:tint="#FFFFFF"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35dp"
                android:src="@drawable/ic_app_settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="29dp"
                android:fontFamily="@font/roboto"
                android:text="App Settings"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#444444" />

        <!-- Help -->
        <LinearLayout
            android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:paddingVertical="16dp">

            <ImageView
                app:tint="#FFFFFF"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35dp"
                android:src="@drawable/ic_help" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="29dp"
                android:fontFamily="@font/roboto"
                android:text="Help"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#444444" />

        <!-- Share WordPress with a friend -->
        <LinearLayout
            android:id="@+id/share_wordpress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:paddingVertical="16dp">

            <ImageView
                app:tint="#FFFFFF"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35dp"
                android:src="@drawable/ic_share_wordpress" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="29dp"
                android:fontFamily="@font/roboto"
                android:text="Share WordPress with a friend"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#444444" />

        <!-- WP Admin -->
        <LinearLayout
            android:id="@+id/wp_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:paddingVertical="16dp">

            <ImageView
                app:tint="#FFFFFF"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35dp"
                android:src="@drawable/ic_wp_admin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="29dp"
                android:fontFamily="@font/roboto"
                android:text="WP Admin"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#444444" />

        <!-- Log out of WordPress.com -->
        <LinearLayout
            android:id="@+id/log_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:paddingVertical="16dp">

            <ImageView
                app:tint="#FFFFFF"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35dp"
                android:src="@drawable/ic_log_out" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="29dp"
                android:fontFamily="@font/roboto"
                android:text="Log out of WordPress.com"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />
        </LinearLayout>
        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#444444" />
    </LinearLayout>

    <!-- Gravatar Section -->
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="194dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="22dp"
        android:background="@drawable/combined_background"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Gravatar Information -->
        <TextView
            android:layout_width="280dp"
            android:layout_height="49dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:text="Your WordPress.com profile is powered by Gravatar"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textFontWeight="700"/>

        <TextView
            android:layout_width="281.76102dp"
            android:layout_height="57dp"
            android:fontFamily="@font/roboto"
            android:text="Updating your avatar, name, and about info here will also update it across all sites that use Gravatar profiles."
            android:textColor="@color/white"
            android:textSize="14sp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#444444" />

        <!-- What is Gravatar? -->
        <TextView
            android:layout_width="118.74214dp"
            android:layout_height="13.31373dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto"
            android:text="What is Gravatar?"
            android:textColor="@color/green"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>

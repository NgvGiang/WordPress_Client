<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign_up_choose_email">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/emailtoolbar"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/onBackGround"
        app:navigationIconTint="@color/onBackGround"
        />

    <LinearLayout
        android:id="@+id/avatarEmailLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailtoolbar"
        android:padding="20dp"

        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/profile"
            android:contentDescription="User Avatar"
            android:layout_marginRight="16dp" />

        <!-- Email -->
        <TextView
            android:id="@+id/emailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username@gmail.com"
            android:textColor="@color/onBackGround"
            android:textSize="20sp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/descriptionTextforemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatarEmailLayout"
        android:layout_marginTop="0dp"
        android:padding="20dp"
        android:text="@string/we_ll_use_this_email_address_to_create_your_new_wordpress_com_account"
        android:textColor="@color/onBackGround"
        android:textSize="17dp" />

    <Button

        android:id="@+id/createAccountButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/blue"
        android:text="@string/create_account"


        android:textColor="@color/onButton"
        app:cornerRadius="5dp" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".sign_up_choose_email">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/emailtoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background"
        android:paddingTop="25dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:title="WordPress Media" />


    <LinearLayout
        android:id="@+id/avatarEmailLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailtoolbar"
        android:padding="16dp"
        android:background="@color/main_background"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/profile"
            android:contentDescription="User Avatar"
            android:layout_marginRight="16dp" />

        <!-- Email -->
        <TextView
            android:id="@+id/emailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username@gmail.com"
            android:textColor="@color/onBackGround"
            android:textSize="16sp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/descriptionTextforemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatarEmailLayout"
        android:layout_marginTop="0dp"
        android:padding="16dp"
        android:text="@string/we_ll_use_this_email_address_to_create_your_new_wordpress_com_account"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button

        android:id="@+id/createAccountButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:backgroundTint="@color/blue"
        android:text="@string/create_account"

        android:textColor="@color/onBackGround"
        app:cornerRadius="5dp" />
</RelativeLayout>

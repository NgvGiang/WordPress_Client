<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/main_background">

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/profile" />


    <TextView
        android:id="@+id/usernameheaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userImage"
        android:layout_marginBottom="12dp"
        android:text="@string/user_name"
        android:textColor="@color/onBackGround"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/useremail"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameheaderText"
        android:layout_marginTop="-15dp"
        android:alpha="0.5"
        android:text="@string/username_gmail"
        android:textColor="@color/onBackGround"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/displayname"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/useremail"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/display_name_signup"
        android:textColor="@color/blue"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/input_adress"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/displayname"
        android:background="@drawable/border_blue"
        android:ems="10"
        android:paddingStart="20dp"
        android:inputType="text"
        android:textColor="@color/onBackGround"/>

    <TextView
        android:id="@+id/ten_nguoi_dung"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_adress"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="21dp"
        android:text="@string/title_user_name"
        android:textColor="@color/blue"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/nhaptennguoidung"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/ten_nguoi_dung"
        android:background="@drawable/border_blue"
        android:ems="10"
        android:paddingStart="20dp"
        android:inputType="text"
        android:textColor="@color/onBackGround"/>


    <Button
        android:id="@+id/doneButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:backgroundTint="@color/blue"
        android:text="@string/done"
        android:textColor="@color/onBackGround"
        android:textSize="14sp"
        app:cornerRadius="8dp" />



</RelativeLayout>

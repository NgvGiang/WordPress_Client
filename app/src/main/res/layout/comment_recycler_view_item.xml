<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cmt_rec_card"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/comment_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TODAY"
        android:textSize="14dp"
        android:paddingBottom="8dp"
        android:paddingLeft="56dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <ImageView
                android:id="@+id/author_avatar_comment"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/blank_avatar"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp">
                <TextView
                    android:id="@+id/author_name_comment_and_post_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Elenya Alquarinqua on Saturday, 12 October 2024"
                    android:paddingLeft="8dp"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/comment_content"
                    android:paddingLeft="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="content"
                    android:maxLines="2"
                    android:ellipsize="end" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#88B3B3B3"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
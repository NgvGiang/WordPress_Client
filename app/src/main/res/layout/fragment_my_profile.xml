<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_background"
    android:paddingTop="16dp"
    >

    <!-- Toolbar Section with Back Button -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_my_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#121212"
        android:paddingTop="25dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />


    <!-- First name label -->
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First name"
        android:fontFamily="@font/roboto"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="19dp"
        />

    <!-- First name value -->
    <TextView
        android:id="@+id/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:textSize="13sp"
        android:text="@your_first_name"
        android:layout_marginStart="10dp"
        android:textColor="@color/gray"
        android:layout_marginBottom="19dp"
        />
    </LinearLayout>
    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444444" />

    <!-- Last name label -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last name"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/roboto"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="19dp"/>

    <!-- Last name value -->
    <TextView
        android:id="@+id/last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@your_last_name"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/gray"
        android:layout_marginBottom="19dp"/>
    </LinearLayout>
    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444444" />

    <!-- Public display name label -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Public display name"
        android:fontFamily="@font/roboto"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:layout_marginTop="19dp"/>

    <!-- Public display name value -->
    <TextView
        android:id="@+id/public_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@display_name"
        android:textColor="@color/gray"
        android:layout_marginBottom="19dp"
        android:layout_marginStart="10dp"/>
    </LinearLayout>
    <!-- Divider -->
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#444444" />

    <!-- About me label -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About me"
        android:fontFamily="@font/roboto"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="19dp"
        android:layout_marginStart="10dp"/>
    </LinearLayout>
    <!-- Divider -->
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#444444" />


</LinearLayout>

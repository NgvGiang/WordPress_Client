<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for WordPressClient -->
    <style name="Base.Theme.WordPressClient" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme colors here -->
        <item name="colorPrimary">@color/blue</item> <!-- Primary color -->
        <item name="colorPrimaryVariant">@color/light_blue</item> <!-- Darker variant -->
        <item name="colorOnPrimary">@color/black</item> <!-- Text color on primary -->
        <item name="colorSecondary">@color/white</item> <!-- Secondary color -->
        <item name="colorOnSecondary">@color/black</item> <!-- Text color on secondary -->
        <item name="colorSurface">@color/white</item> <!-- Surface color -->
        <item name="colorOnSurface">@color/black</item> <!-- Text color on surface -->
        <item name="android:windowBackground">@color/white</item> <!-- Window background -->
    </style>

    <!-- Main Theme for WordPressClient -->
    <style name="Theme.WordPress" parent="Base.Theme.WordPressClient">
        <!-- Customize specific attributes for the main theme if needed -->
    </style>

    <!-- No Action Bar Theme Variant -->
    <style name="Theme.WordPress.NoActionBar" parent="Base.Theme.WordPressClient">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- App Bar Overlay for WordPressClient -->
    <style name="Theme.WordPress.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Popup Overlay for WordPressClient -->
    <style name="Theme.WordPress.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Main Theme for WordPressClient -->
    <style name="Theme.WordPressClient" parent="Base.Theme.WordPressClient" />
</resources>